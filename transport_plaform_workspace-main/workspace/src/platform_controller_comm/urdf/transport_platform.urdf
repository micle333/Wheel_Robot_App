<?xml version="1.0"?>

<robot name="four_wheeled_robot">

  <!-- Определение материалов -->
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="2.2 1.43 0.53"/>
      </geometry>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <box size="2.2 1.43 0.53"/>
      </geometry>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Front left wheel -->
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.205" radius="0.24"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.205" radius="0.24"/>
      </geometry>
    </collision>
  </link>

  <!-- Front right wheel -->
  <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.205" radius="0.24"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.205" radius="0.24"/>
      </geometry>
    </collision>
  </link>

  <!-- Rear left wheel -->
  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.205" radius="0.24"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.205" radius="0.24"/>
      </geometry>
    </collision>
  </link>

  <!-- Rear right wheel -->
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.205" radius="0.24"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.205" radius="0.24"/>
      </geometry>
    </collision>
  </link>

  <!-- Front axle -->
  <link name="front_axle">
    <visual>
      <geometry>
        <box size="0.02 1.43 0.02"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.02 1.43 0.02"/>
      </geometry>
    </collision>
  </link>

  <!-- Rear axle -->
  <link name="rear_axle">
    <visual>
      <geometry>
        <box size="0.02 1.43 0.02"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.02 1.43 0.02"/>
      </geometry>
    </collision>
  </link>

  <!-- Joints -->

  <!-- Front axle joint -->
  <joint name="front_axle_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_axle"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.7854" upper="0.7854" effort="10" velocity="1.0"/>
  </joint>

  <!-- Rear axle joint -->
  <joint name="rear_axle_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_axle"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.7854" upper="0.7854" effort="10" velocity="1.0"/>
  </joint>

  <!-- Front left wheel joint -->
  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="front_axle"/>
    <child link="front_left_wheel"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Front right wheel joint -->
  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="front_axle"/>
    <child link="front_right_wheel"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Rear left wheel joint -->
  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="rear_axle"/>
    <child link="rear_left_wheel"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Rear right wheel joint -->
  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="rear_axle"/>
    <child link="rear_right_wheel"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>
