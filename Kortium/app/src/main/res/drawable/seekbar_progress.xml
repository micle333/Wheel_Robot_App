<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:id="@android:id/secondaryProgress">
        <shape android:shape="rectangle">
            <solid android:color="#1C29ABE2" /> <!-- Полупрозрачная синяя подсветка -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%" android:gravity="center_horizontal">
            <shape android:shape="rectangle">
                <solid android:color="#1C29ABE2" /> <!-- Основная синяя подсветка -->
                <corners android:radius="10dp"/>
            </shape>
        </scale>
    </item>
</layer-list>
