<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Основной контент -->
    <RelativeLayout
        android:id="@+id/MainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- FrameLayout для размытого фона -->
        <RelativeLayout
            android:id="@+id/background_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ImageView, привязанная к правому верхнему углу -->
            <ImageView
                android:id="@+id/battery_image"
                android:scaleType="fitCenter"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/battery" />

            <!-- TextView 1, привязанная слева под ImageView -->
            <TextView
                android:id="@+id/wheel_spped"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/battery_image"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/nexa_heavy"
                android:textSize="40dp"
                android:text="43" />

            <!-- TextView 2, привязанная слева под TextView 1 -->
            <TextView
                android:id="@+id/mph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wheel_spped"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/nexa_heavy"
                android:textSize="18dp"
                android:text="KM/H" />

            <!-- TextView 3, привязанная справа на том же уровне, что и TextView 1 -->
            <TextView
                android:id="@+id/battery_persents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/battery_image"
                android:layout_toStartOf="@id/battery_image"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/nexa_heavy"
                android:text="75%" />

            <!-- Центральное изображение -->
            <ImageView
                android:id="@+id/center_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:src="@drawable/cybertruck" />

            <!-- Joystick -->
            <com.example.kortium.JoystickView
                android:id="@+id/joystick"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp" />

            <!-- Поле ввода сообщения -->
            <EditText
                android:id="@+id/message_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:hint="Enter message" />

            <!-- Кнопка отправки сообщения -->
            <Button
                android:id="@+id/send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="Send"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:layout_below="@id/message_field" />

            <!-- Вывод результата -->
            <TextView
                android:id="@+id/output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_below="@id/send_button"
                android:padding="16dp"
                android:text="" />
            <!-- Красная рамка -->
            <ImageView
                android:id="@+id/error_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/error_frame" />
        </RelativeLayout>

        <!-- Toolbar, размещенная поверх FrameLayout -->
<!--        <androidx.appcompat.widget.Toolbar-->
<!--            android:id="@+id/toolbar"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="?attr/actionBarSize"-->
<!--            android:background="?attr/colorPrimary"-->
<!--            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
<!--            android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />-->

        <!-- Кнопка открытия меню -->
        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/toolbar_icon" />

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <!-- Кнопка STOP прижата к низу по центру -->
            <ImageButton
                android:id="@+id/stop"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/stop_ic" />

            <!-- Кнопка поворота направо (первая слева) -->
            <ImageButton
                android:id="@+id/right_turn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="14dp"
                android:layout_above="@id/stop"
                android:layout_alignParentStart="true"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/right_turn" />

            <!-- Кнопка поворота налево (вторая слева) -->
            <ImageButton
                android:id="@+id/left_turn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="14dp"
                android:layout_above="@id/stop"
                android:layout_toEndOf="@id/right_turn"
                android:layout_marginStart="16dp"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/left_turn" />

        </RelativeLayout>



    </RelativeLayout>

    <!-- Затемняющий слой для формы (overlay) -->
    <View
        android:id="@+id/dim_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />

    <!-- Плавающая форма для ввода IP и порта -->
    <LinearLayout
        android:id="@+id/overlay_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/ip_address"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/edit_text_background"
            android:cursorVisible="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/nexa_heavy"
            android:hint="Enter IP Address"
            android:importantForAccessibility="no"
            android:inputType="text"
            android:padding="10dp"
            android:paddingLeft="16dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text="10.42.0.1"
            android:textColor="@drawable/text_selector"
            android:defaultFocusHighlightEnabled="false"
            android:textColorHint="#808080"
            android:textSize="16sp" />
        <!--        android:hint="Enter IP address" -->

        <EditText
            android:id="@+id/port"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ip_address"
            android:layout_centerInParent="true"
            android:layout_margin="0dp"
            android:background="@drawable/edit_text_background"
            android:cursorVisible="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/nexa_heavy"
            android:hint="Enter IP Address"
            android:importantForAccessibility="no"
            android:inputType="text"
            android:padding="10dp"
            android:paddingLeft="16dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text="4513"
            android:textColor="@drawable/text_selector"
            android:textColorHint="#808080"
            android:textSize="16sp" />

        <Button
            android:id="@+id/connect_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:padding="10dp"
            android:background="@drawable/button_background"
            android:text="Connect"
            android:textColor="@drawable/text_selector"
            android:fontFamily="@font/nexa_heavy" />

        <TextView
            android:id="@+id/connecting_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/brown"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="" />
    </LinearLayout>
    <!-- NavigationView для бокового меню -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="?android:attr/colorBackground" />

</androidx.drawerlayout.widget.DrawerLayout>